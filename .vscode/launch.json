    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/.bin/ts-node",
            "args": [
                "--project",
                "${workspaceFolder}/src/tsconfig.json",
                "-r",
                "tsconfig-paths/register",
                "${workspaceFolder}/src/index.ts"
            ],
            "outputCapture": "std"
        }
    ]
}
