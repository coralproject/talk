{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "no-console": [
            0
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-template-curly-in-string": [1],
        "no-unsafe-negation": [1],
        "array-callback-return": [1],
        "eqeqeq": [2],
        "no-eval": [2],
        "no-global-assign": [2],
        "no-implied-eval": [2],
        "no-script-url": [2],
        "no-throw-literal": [2],
        "yoda": [1],
        "no-path-concat": [2],
        "no-process-exit": [2],
        "eol-last": [1],
        "no-continue": [1],
        "no-nested-ternary": [1],
        "no-tabs": [2],
        "no-unneeded-ternary": [1],
        "object-curly-spacing": [1],
        "space-infix-ops": ["error"],
        "no-const-assign": [2],
        "no-duplicate-imports": [2],
        "prefer-template": [1],
        "comma-spacing": [
          "error",
          {
            "after": true
          }
        ],
        "no-var": [2],
        "no-lonely-if": [2],
        "curly": [2],
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "no-multiple-empty-lines": [
          "error",
          {"max": 1}
        ],
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 2 }]
    }
}
